{
  "name": "gigaretry",
  "version": "2.0.0",
  "description": "Flexible, fail-safe retry mechanism with exponential backoff, logging, timeout, and optional child process execution.",
  "main": "src/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm test",
    "version": "npm run test && git add -A src",
    "postversion": "git push && git push --tags",
    "type-check": "tsc --noEmit",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir types"
  },
  "keywords": [
    "giga",
    "gigaretry",
    "retry",
    "retry-logic",
    "backoff",
    "exponential-backoff",
    "nodejs",
    "typescript",
    "utility",
    "resilience",
    "fail-safe",
    "child-process",
    "isolation",
    "timeout",
    "logger",
    "robust",
    "resilient",
    "async",
    "promise",
    "error-handling",
    "fault-tolerance"
  ],
  "author": "Namit Sharma",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/MelasMalephar/gigaretry.git"
  },
  "bugs": {
    "url": "https://github.com/MelasMalephar/gigaretry/issues"
  },
  "homepage": "https://github.com/MelasMalephar/gigaretry#readme",
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "src/",
    "types/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.9",
    "babel-jest": "^30.0.5",
    "jest": "^30.0.5",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.9.2"
  },
  "funding": {
    "type": "buymeacoffee",
    "url": "https://buymeacoffee.com/devnamit"
  }
